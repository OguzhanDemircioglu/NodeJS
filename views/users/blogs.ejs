<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/libs/bootstrap/dist/css/bootstrap.min.css">

</head>

<body>

    <%- include("../partials/nav") %>
    <nav class="navbar navbar-dark bg-primary navbar-expang-ls">
        <div class="container">
            <a href="/" class="navbar-brand">BlogApp</a>
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a href="/blogs" class="nav-link">Blog Listesi</a>
                </li>
            </ul>
        </div>
    </nav>

    <% blogs.forEach(element=> { %>
        
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-3">
                    <img src=/static/images/<%=element.resim%> class="img-fluid" alt="">
                </div>
                <div class="col-md-9">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=element.baslik%>
                        </h5>
                        <p class="card-text">
                            <%=element.aciklama%>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
</body>

</html>